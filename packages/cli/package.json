{
  "name": "@wvb/cli",
  "version": "0.1.0",
  "homepage": "https://github.com/webview-bundle/webview-bundle",
  "bugs": {
    "url": "https://github.com/webview-bundle/webview-bundle/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Seokju Na",
    "email": "seokju.me@gmail.com",
    "url": "https://github.com/seokju-na"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webview-bundle/webview-bundle",
    "directory": "packages/cli"
  },
  "bin": {
    "webview-bundle": "./dist/cli.mjs",
    "wvb": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepack": "yarn build",
    "clean": "rm -rf dist/",
    "build": "yarn clean && yarn build-js && yarn build-cli",
    "build-cli": "tsdown -c tsdown.cli.config.ts",
    "build-js": "tsdown -c tsdown.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.2",
    "@logtape/logtape": "1.3.5",
    "@wvb/config": "workspace:^",
    "@wvb/node": "workspace:^",
    "ci-info": "^4.2.0",
    "cli-progress": "^3.12.0",
    "clipanion": "4.0.0-rc.4",
    "es-toolkit": "^1.43.0",
    "hono": "^4.11.10",
    "kleur": "^4.1.5",
    "picomatch": "^4.0.3",
    "rolldown": "1.0.0-beta.51",
    "supports-color": "^10.0.0",
    "tinyglobby": "^0.2.14",
    "typanion": "^3.14.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3",
    "@types/node": "catalog:",
    "@types/picomatch": "^4",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">= 18.14.1 < 19 || >= 19.7.0 < 20 || >= 20.0.0"
  }
}
